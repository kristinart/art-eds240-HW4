# define function to rewrite values in shorthand format ----
custom_number_format <- function(x) {
  ifelse(x >= 1e6,
    gsub(" ", "", sprintf("-%sM", format(round(x / 1e6, 1), nsmall = 1, big.mark = ""))),
    gsub(" ", "", sprintf("-%sk", format(round(x / 1e3), big.mark = "")))
  )
}

